{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node LTS",
  "_version": "20.1.0",
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "outDir": "dist",
    "module": "commonjs", // Changed to CommonJS for better Node.js compatibility
    "target": "ES2021", // Set target for broader compatibility
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, // Allows importing JSON modules directly
    "forceConsistentCasingInFileNames": true // Helps prevent case-sensitive import issues
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
